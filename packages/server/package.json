{
  "name": "@velocejs/server",
  "version": "0.3.0",
  "description": "Server core using uWebsocket.js with additional helpers",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "index.d.ts",
  "files": [
    "dist",
    "src",
    "index.d.ts"
  ],
  "scripts": {
    "test": "ava",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build:tsc": "tsc -p tsconfig.json",
    "build:esr": "esbuild src/index.ts --platform=node --outfile=dist/index.js",
    "test:srv": "PORT=9010 pnpm ts -- ./dev/server.ts",
    "test:client": "PORT=9010 pnpm ts -- ./dev/client.ts",
    "test:api": "DEBUG=velocejs* pnpm ts -- ./dev/decorator.ts",
    "clean": "node ./clean.js",
    "docs": "typedoc --entryPoints src/main.ts",
    "ts": "node -r esbuild-register",
    "clean:dist": "rimraf ./dist",
    "prepublishOnly": "pnpm clean:dist && pnpm build:tsc && pnpm test"
  },
  "author": "Joel Chu <joelchu@foxmail.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "debug": "^4.3.4",
    "mime-types": "^2.1.35",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.1",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.6.0"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "ava": "^4.1.0",
    "esbuild": "^0.14.27",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.11.0",
    "fs-extra": "^10.0.1",
    "node-fetch": "^3.2.3",
    "rimraf": "^3.0.2"
  },
  "ava": {
    "verbose": false,
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  }
}
