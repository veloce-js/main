{
  "name": "@velocejs/client",
  "version": "0.0.0",
  "description": "@velocejs/client generate client code using contract",
  "main": "dist/index.js",
  "module": "dist/index.ts",
  "browser": "./dist/velocejs-client.min.js",
  "files": [
    "dist",
    "src",
    "index.d.ts",
    "fetch.js",
    "fetch.js.map"
  ],
  "scripts": {
    "dev": "pnpm build:fetch:dev && DEBUG=velocejs:* pnpm run:dev",
    "run:dev": "NODE_ENV=development VELOCE_CONFIG=./dev/veloce.config.js pnpm ts ./dev/start.ts",
    "test:ava": "ava",
    "test:nyc": "nyc ava",
    "test": "pnpm build && pnpm test:ava",
    "test:v": "VELOCE_CONFIG=./dev/veloce.config.js ava",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build:tsc": "tsc -p tsconfig.json",
    "build:browser": "esbuild ./src/index.ts --bundle --minify --sourcemap --outfile=./dist/velocejs-client.min.js",
    "build:fetch": "esbuild ./src/fetch.ts --bundle --minify --sourcemap --outfile=./fetch.js",
    "build:fetch:dev": "esbuild ./src/fetch.ts --bundle --tree-shaking=true --format=esm --outfile=./dev/httpdocs/veloce-fetch-client.dev.js",
    "build:dev:browser": "esbuild ./src/index.ts --bundle --sourcemap --outfile=./dev/httpdocs/velocejs-client.js",
    "ts:check": "tsc -noEmit",
    "docs": "typedoc --entryPoints src/main.ts",
    "ts": "node -r esbuild-register",
    "prepare:types": "cp ./src/types.d.ts ./index.d.ts && cp ./src/types.d.ts ./dist/types.d.ts",
    "update:version": "node ../../update-devs.js client",
    "clean:dist": "rimraf ./dist",
    "build": "pnpm clean:dist && pnpm build:tsc",
    "prepublishOnly": "pnpm build && pnpm test:nyc",
    "postpublish": "pnpm update:version",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "author": "Joel Chu <joelchu@foxmail.com>",
  "license": "ISC",
  "homepage": "https://velocejs.com",
  "dependencies": {
    "@jsonql/constants": "^0.7.2",
    "@jsonql/contract": "^0.5.0",
    "@jsonql/utils": "^0.6.8",
    "@velocejs/config": "workspace:^0.4.1",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^17.0.34",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@velocejs/fastapi": "workspace:^0.7.3",
    "ava": "^4.2.0",
    "chokidar": "^3.5.3",
    "esbuild": "^0.14.39",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.15.0",
    "fs-extra": "^10.1.0",
    "node-fetch": "^3.2.4",
    "nyc": "^15.1.0",
    "open": "^8.4.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4",
    "ws": "^8.6.0"
  },
  "ava": {
    "verbose": true,
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  }
}
