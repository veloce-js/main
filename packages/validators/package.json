{
  "name": "@velocejs/validators",
  "version": "0.5.1",
  "description": "@velocejs/validators based of @jsonql/validator",
  "main": "dist/index.js",
  "module": "dist/index.ts",
  "files": [
    "dist",
    "src",
    "index.d.ts"
  ],
  "scripts": {
    "test:ava": "ava",
    "test:nyc": "nyc ava",
    "test": "pnpm build && pnpm test:ava",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build:tsc": "tsc -p tsconfig.json",
    "build:swc": "npx swc ./src/client.ts -o client.js",
    "ts:check": "tsc -noEmit",
    "docs": "typedoc --entryPoints src/main.ts",
    "ts": "node -r esbuild-register",
    "prepare:types": "cp ./src/types.d.ts ./index.d.ts && cp ./src/types.d.ts ./dist/types.d.ts",
    "update:version": "node ../../update-devs.js validators",
    "clean:dist": "rimraf ./dist",
    "build": "pnpm clean:dist && pnpm build:tsc && pnpm prepare:types",
    "prepublishOnly": "pnpm build && pnpm test:nyc",
    "postpublish": "pnpm update:version",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "spack": "npx spack"
  },
  "author": "Joel Chu <joelchu@foxmail.com>",
  "license": "ISC",
  "homepage": "https://velocejs.com",
  "dependencies": {
    "@jsonql/validators": "^0.5.2",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@jsonql/ast": "^0.8.5",
    "@jsonql/errors": "^0.7.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.196",
    "@types/fs-extra": "^9.0.13",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "ava": "^4.3.0",
    "esbuild": "^0.14.42",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.16.0",
    "fs-extra": "^10.1.0",
    "node-fetch": "^3.2.5",
    "nyc": "^15.1.0",
    "open": "^8.4.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.2",
    "vite": "^2.9.9",
    "vitest": "^0.13.1"
  },
  "ava": {
    "verbose": true,
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  }
}
