{
  "name": "@velocejs/fastapi",
  "version": "0.2.1",
  "description": "Built on top of @velocejs/server that let you build your API in no time",
  "main": "dist/index.js",
  "module": "dist/index.ts",
  "files": [
    "dist",
    "src",
    "index.d.ts"
  ],
  "scripts": {
    "test:ava": "ava",
    "test:nyc": "nyc ava",
    "test": "pnpm build && pnpm test:nyc",
    "build": "pnpm clean:dist && pnpm build:tsc",
    "prepare:types": "cp ./src/types.d.ts ./index.d.ts",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build:tsc": "tsc -p tsconfig.json",
    "ts:check": "tsc -noEmit",
    "docs": "typedoc --entryPoints src/main.ts",
    "ts": "node -r esbuild-register",
    "test:form": "DEBUG=velocejs:* pnpm ts -- ./examples/form/index.ts",
    "test:upload": "DEBUG=velocejs:* pnpm ts -- ./examples/upload/index.ts",
    "test:vali": "DEBUG=velocejs:* pnpm ts -- ./examples/validation/my-example.ts",
    "ts-node": "ts-node",
    "clean:dist": "rimraf ./dist",
    "prepublishOnly": "pnpm prepare:types && pnpm test",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "author": "Joel Chu <joelchu@foxmail.com>",
  "license": "ISC",
  "dependencies": {
    "@jsonql/ast": "^0.7.0",
    "@jsonql/errors": "^0.6.0",
    "@jsonql/utils": "^0.6.5",
    "@jsonql/validator": "^0.4.0",
    "@velocejs/bodyparser": "workspace:^0.2.0",
    "@velocejs/server": "workspace:^0.7.4",
    "debug": "^4.3.4",
    "fs-extra": "^10.1.0",
    "mime-types": "^2.1.35",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "ava": "^4.2.0",
    "esbuild": "^0.14.38",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.14.0",
    "node-fetch": "^3.2.4",
    "nyc": "^15.1.0",
    "open": "^8.4.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "ava": {
    "verbose": true,
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "esbuild-register"
    ]
  },
  "homepage": "https://velocejs.com"
}
